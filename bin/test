#!/usr/bin/env python

import os
import nose

HERE = os.path.abspath(os.path.dirname(__file__))

if __name__ == '__main__':

    os.chdir(os.path.dirname(HERE))

    os.environ.update({
        'TESTING': 'True',
        'DATABASE_URL': 'sqlite:///:memory:',
        'SECRET_KEY': 'test-random-secret-key',
    })

    nose.main()
